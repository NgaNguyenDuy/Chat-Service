doctype html
html(lang="en")
    head
        title Login
        script(src="js/jquery.min.js")
        link(rel="stylesheet", href="css/bootstrap.min.css")
        link(rel="stylesheet", href="css/styles.css")
        script(src="js/bootstrap.min.js")
        script(src="chat.js")
        script(src="/socket.io/socket.io.js")
    body
        form.form-signin(name='login' action='/main' method='get' role='form')
                h2.form-signin-heading Chat
                input.form-control(type='text' placeholder='Nick name' required autofocus)
                input.form-control(type='password' placeholder='password' required)
                input(type='submit' value='Login').btn.btn-primary#btn-send
